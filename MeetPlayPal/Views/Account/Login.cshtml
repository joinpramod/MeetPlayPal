@using MeetPlayPal.Models
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main id="tg-main" class="tg-main tg-haslayout">

    <div class="container">
        <div class="row">
           
            <div id="tg-content" class="tg-content">
                <div class="tg-titleshortcode" style="padding-left:2%">
                    <h2>Login</h2>
                </div>
                @*<div class="tg-title">
                    <h2>Login</h2>
                </div>*@

                @*<div class="success_info">Thank you! your message sent successful</div>*@
                <div class="error_info">@ViewBag.Ack</div>
                @using (Html.BeginForm("ProcessActivationCode", "Account"))
                {

                    if (ViewBag.Activation != null)
                    {
                        <div class="form-group">
                            <div class="error_info">@ViewBag.Activation</div>
                        </div>
                        <div class="col-lg-6 col-6">
                            <div class="form-area">
                                <button type="submit" id="btnResendAct" class="btn btn-block">Resend Activation Link</button>
                                @Html.Hidden("hfUserEMail", (object)ViewBag.UserActEMail)
                            </div>
                        </div>
                    }
                }

                <div class="tg-loginsignup">

                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">

                        <div class="tg-logingarea">
                            @*<h2>Login Now</h2>*@

                            @using (Html.BeginForm("ProcessLogin", "Account"))
                            {
                                <div class="tg-formtheme tg-formloging">
                                    @*<fieldset>*@
                                    <div class="form-group">
                                        @*<input type="text" name="username" class="form-control" placeholder="Username">*@
                                        @Html.TextBox("txtEMailId", "", new { @class = "form-control", placeholder = "Email ID", name = "txtEMailId", type = "email", required = "required" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Password("txtPassword", "", new { @class = "form-control", placeholder = "Password", name = "txtPassword", type = "password", required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <div class="tg-checkbox">
                                            <input id="tg-rememberme" type="checkbox" name="rememberme" value="rememberme">
                                            <label for="tg-rememberme">Keep me logged in</label>
                                        </div><br />
                                        <a href="@Url.Action("ForgotPassword", "Account")">Forgotten your password?</a>
                                    </div>
                                    <button class="tg-btn" type="submit">Login</button>
                                    <p class="mt20">Dont have an account? <a href="@Url.Action("Register", "Account")">Register</a></p>
                                    @*</fieldset>*@
                                </div>
                            }

                        </div>
                        <div class="tg-texbox">
