@model MeetPlayPal.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security


@{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
    {
                @Html.AntiForgeryToken()
        <button class="btn btn-block btn-facebook btn-lg btn-left-icon" id="Facebook" name="Facebook" value="Facebook">
            <span class="fa fa-facebook" aria-hidden="true"></span> Login with Facebook
        </button>

        <button class="btn btn-block btn-google btn-lg btn-left-icon" id="Google" name="Google" value="Google">
            <span class="fa fa-google-plus" aria-hidden="true"></span> Login with Google Plus
        </button>

        <button class="btn btn-block btn-twitter btn-lg btn-left-icon" id="Twitter" name="Twitter" value="Twitter">
            <span class="fa fa-twitter" aria-hidden="true"></span> Login with Twitter
        </button>


    }
}
