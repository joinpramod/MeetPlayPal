
@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/Shared/_Layout_AfterLogin.cshtml";
}

@{
    MeetPlayPal.Models.PagingInfo info = ViewBag.PagingInfo;
}


@using (Html.BeginForm("MyAns", "Activity", FormMethod.Post))
{
    @Html.Hidden("SortField", info.SortField)
    @Html.Hidden("SortDirection", info.SortDirection)
    @Html.Hidden("PageCount", info.PageCount)
    @Html.Hidden("PageSize", info.PageSize)
    @Html.Hidden("CurrentPageIndex", info.CurrentPageIndex)

    <main id="tg-main" class="tg-main tg-haslayout">
        <!--************************************
                Section Start
        *************************************-->
        <section class="tg-dbsectionspace tg-haslayout">
            <div class="row">
                <form class="tg-formtheme tg-formdashboard">
                    <fieldset>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="tg-dashboardbox">
                                <div class="tg-dashboardboxtitle">
                                    <h2 style="font-size:26px">Enquiries from others</h2>
                                </div>

                                <div class="tg-dashboardholder">
                                    <div class="tg-otherfilters">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4 pull-left">
                                                <div>
                                                    <div class="form-group tg-inputwithicon">
                                                        <i class="icon-magnifier"></i>
                                                        <input type="search" name="search" class="form-control" placeholder="Search Title/Keyword">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 pull-left">
                                                <div>
                                                    <div class="form-group">
                                                        <div class="tg-select">
                                                            <select>
                                                                <option value="Select Category">Select Category</option>
                                                                <option value="Select Category">Select Category</option>
                                                                <option value="Select Category">Select Category</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row"> &nbsp;</div>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4 pull-left">
                                                <div>
                                                    <div class="form-group tg-inputwithicon">
                                                        <i class="fa fa-crosshairs"></i>
                                                        <input type="text" name="location" class="form-control" placeholder="Location">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 pull-left">
                                                <button type="button" class="tg-btn">apply filter</button>
                                            </div>
                                        </div>

                                        <div class="row"> &nbsp;</div>

                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4 pull-left">
                                                <div class="form-group tg-inputwithicon">

                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 pull-right">
                                                <div class="form-group tg-sortby">
                                                    <span>Sort by:</span>
                                                    <div class="tg-select">
                                                        <select>
                                                            <option>Most Recent</option>
                                                            <option>Most Recent</option>
                                                            <option>Most Recent</option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <table id="tg-adstype" class="table tg-dashboardtable tg-tablemyads">
                                        <thead>
                                            <tr>
                                                <th>From</th>
                                                <th>Message</th>
                                                <th>Sports</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var msg in Model)
                                            {
                                                <tr data-category="active">
                                                    <td data-title="Message">@msg.MsgFrom</td>
                                                    <td data-title="Message">
                                                        <h3>@msg.MessageText</h3>
                                                        @*<span>Ad ID: ng3D5hAMHPajQrM</span>*@
                                                    </td>
                                                    <td data-title="Category"><span class="tg-adcategories">@msg.Status_Code</span></td>
                                                    <td data-title="Date">
                                                        <time datetime="2017-08-08">@msg.ModifiedDateTime</time>
                                                    </td>
                                                    <td data-title="Action">
                                                        <div class="tg-btnsactions">
                                                            <a class="tg-btnaction tg-btnactionview" href="@Url.Action("Index", "Home", new { id = msg.MessageId })" title="View"><i class="fa fa-eye"></i></a>
                                                            @*<a class="tg-btnaction tg-btnactionview" href="@Url.Action("Index", "Home", new { id = msg.MessageId })" title="Reply"><i class="fa fa-pencil"></i></a>*@
                                                            <a class="tg-btnaction tg-btnactionview" href="@Url.Action("Index", "Home", new { id = msg.MessageId })" title="Delete"><i class="fa fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                    <nav class="tg-pagination">
                                        <ul>

                                            @for (var i = 0; i < info.PageCount; i++)
                                            {
                                                if (i == info.CurrentPageIndex)
                                                {
                                                    <li class="tg-active">@(i + 1)</li>
                                                }
                                                else
                                                {
                                                    <li><a href="#">@(i + 1)</a></li>
                                                }
                                            }
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </section>
        <!--************************************
                Section End
        *************************************-->
    </main>

}